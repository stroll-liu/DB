{
  "include": ["src/**/*", "**/*.ts", "index.d.ts"],
  "exclude": ["node_modules", "lib"],
  "ts-node": { "esm": true },
  "compilerOptions": {
    "module": "commonjs",
    "target": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "lib": ["ESNext"],
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "./lib",
    "declarationDir": "./lib",
    "declarationMap": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "emitDeclarationOnly": false,
    "newLine": "crlf",
    "skipLibCheck": true,
    "paths": {
      "@": ["./src"], 
    }
  },
}